<Window x:Class="Messager.Windows.AddChatsWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messager.Windows"
        mc:Ignorable="d"
        Title="AddChatsWindow1" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Назовате свой чат" Grid.Column="0" FontSize="30" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20 000"/>
        <TextBox x:Name="Namechat" Grid.Row="1" Grid.ColumnSpan="2" Margin="20" FontSize="20"/>
        <Button x:Name="Save" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2" Margin="30" Content="Готово" FontSize="20" Click="Save_Click"/>
        <Button x:Name="Exit" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="30" Content="Назад" FontSize="20" Click="Exit_Click"/>
        
    </Grid>
</Window>
